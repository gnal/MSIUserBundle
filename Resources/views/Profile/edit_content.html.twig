{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST">
    <div class="form-group">
        {{ form_label(form.email) }}
        <div class="row">
            <div class="col-lg-9">
                {{ form_widget(form.email) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.locale) }}
        <div class="row">
            <div class="col-lg-9">
                {{ form_widget(form.locale) }}
            </div>
        </div>
    </div>
    <hr>
    <div class="form-group">
        {{ form_label(form.current_password) }}
        <div class="row">
            <div class="col-lg-9">
                {{ form_widget(form.current_password) }}
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    <button class="btn btn-primary" type=submit><i class="icon-ok icon-large"></i> {{ 'profile.edit.submit'|trans }}</button>
</form>
