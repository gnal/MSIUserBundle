{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-6">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
        <div class="form-group">
            <label for="username">{{ 'resetting.request.username'|trans }}</label>
            <input class="form-control" type="text" id="username" name="username" required="required" />
            {% if invalid_username is defined %}
                <p class="help-block">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
            {% endif %}
        </div>
        <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn-default">
    </form>
    </div>
</div>
