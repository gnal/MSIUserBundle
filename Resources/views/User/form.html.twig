{% form_theme form 'MsiCmfBundle:Form:form.html.twig' %}

<ul id="myTab" class="nav nav-tabs">
    <li class="active"><a href="#general" data-toggle="tab">{{ 'Main'|trans }}</a></li>
    <li><a href="#advanced" data-toggle="tab">{{ 'Groups'|trans }}</a></li>
    {% if app.user.isSuperAdmin %}<li><a href="#acl" data-toggle="tab">{{ 'ACL'|trans }}</a></li>{% endif %}
</ul>

<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade" id="advanced">
        {{ form_row(form.groups) }}
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            {{ form_row(form.roles) }}
        {% endif %}
    </div>
    {% if app.user.isSuperAdmin %}
    <div class="tab-pane fade" id="acl">
        {{ form_row(form.operators) }}
    </div>
    <div class="tab-pane fade active in" id="general">
        {{ form_row(form.enabled) }}
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}
        {{ form_row(form.locked) }}

        {{ form_rest(form) }}
    </div>
    {% endif %}
</div>
